{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create New Task",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "tools/task_creator/task_creator.py",
                "${input:problemId}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "problemId",
            "description": "Enter the Project Euler Problem ID",
            "default": "",
            "type": "promptString"
        }
    ]
}